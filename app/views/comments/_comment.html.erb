<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-2 col-sm-2 col-md-2 col-lg-1 col-xl-1">
          <%= gravatar_helper comment.user %>
        </div>

        <div class="col-10 col-sm-10 col-md-10 col-lg-11 col-xl-11">

            <span class="comment-name"> <%= comment.user.name %> </span>
            <span class="comment-attribution"> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago</span>


          <div class="comment-spacing">
            <%= comment.content %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
