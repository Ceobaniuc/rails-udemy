<div class="container portfolio-container">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-7 ">
      <% if @portfolio_item.main_image.attached? %>
        <%= image_tag @portfolio_item.main_image, width: "100%" %>
      <% else %>
        <%= image_tag (image_generator(height: '600', width: '400')) %>
      <% end %>
    </div>

    <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-5 ">
      <h1><%= @portfolio_item.title %></h1>

      <hr>

      <em><%= @portfolio_item.subtitle %></em>
      <p><%= @portfolio_item.body %></p>

      <hr>

      <h3>Technologies Used</h3>

      <% @portfolio_item.technologies.each do |t| %>
      <p> <%= t.name %> </p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div class="">
        <%= link_to 'Edit item', edit_portfolio_path(@portfolio_item), class: "btn btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
